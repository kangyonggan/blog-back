<?xml version="1.0" encoding="UTF-8"?>
<config>
    <group>
        <!-- dubbo -->
        <property name="blog.dubbo.name" description="项目名字" defaultValue="blog"/>
        <property name="blog.dubbo.registry.address" description="dubbo注册地址"
                  defaultValue="zookeeper://127.0.0.1:2181?backup=127.0.0.1:2182,127.0.0.1:2183"/>
        <property name="blog.dubbo.protocol.port" description="dubbo注册端口" defaultValue="-1"/>
        <property name="blog.dubbo.timeout" description="dubbo超时时间" defaultValue="10000"/>
        <property name="blog.dubbo.api.version" description="api提供接口的版本" defaultValue="1.0.0"/>

        <!--ftp-->
        <property name="blog.ftp.path" description="文件父目录" defaultValue="upload/"/>
        <property name="blog.ftp.ip" description="文件服务器地址" defaultValue="127.0.0.1"/>
        <property name="blog.ftp.port" description="文件服务器端口" defaultValue="21"/>
        <property name="blog.ftp.web.port" description="文件服务器web端口" defaultValue="6789"/>
        <property name="blog.ftp.username" description="ftp登录用户名" defaultValue="ftp0"/>
        <property name="blog.ftp.password" description="ftp登录密码" defaultValue="123456"/>

    </group>
    <script>
        <generate template="applicationContext-consumer.xml"/>
        <generate template="applicationContext-ftp.xml"/>
        <generate template="applicationContext-mvc.xml"/>
    </script>
</config>